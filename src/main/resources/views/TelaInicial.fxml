<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="main-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TelaInicialController">
    <children>
        <VBox alignment="CENTER" layoutX="250.0" layoutY="150.0" prefHeight="300.0" prefWidth="300.0" spacing="20.0" styleClass="card">
            <children>
                <Label styleClass="header-label" text="Banco Digital">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label styleClass="welcome-label" text="Bem-vindo ao seu espaço financeiro" />
                <Button fx:id="btnNovoEmprestimo" mnemonicParsing="false" onAction="#abrirTelaEmprestimo" prefHeight="50.0" prefWidth="200.0" styleClass="main-button" text="Solicitar Empréstimo" />
                <Button fx:id="btnHistoricoEmprestimos" mnemonicParsing="false" onAction="#abrirHistoricoEmprestimos" prefHeight="50.0" prefWidth="200.0" styleClass="secondary-button" text="Histórico de Empréstimos" />
            </children>
        </VBox>
        <Label layoutX="20.0" layoutY="560.0" styleClass="footer-label" text="© 2025 Banco Digital - Todos os direitos reservados" />
    </children>
</AnchorPane>
